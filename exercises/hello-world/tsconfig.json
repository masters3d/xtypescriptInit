{
    "compilerOptions": { 
        "module": "commonjs",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "noFallthroughCasesInSwitch":true,
        "noImplicitThis":true,
        "noImplicitReturns":true,
        "sourceMap": true,
        "rootDir": "."
    },
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ], 
    "exclude": [
        "node_modules"
    ]
}